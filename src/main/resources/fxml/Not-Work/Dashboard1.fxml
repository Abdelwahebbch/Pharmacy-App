<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="10.0" style="-fx-background-color: #2a9d8f;">
            <Label style="-fx-font-size: 20px; -fx-text-fill: white;" text="Pharmacy Management System" />
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
        </HBox>
    </top>

    <!-- Side Menu -->
    <left>
        <VBox prefWidth="200.0" spacing="10.0" style="-fx-background-color: #264653;">
            <Button prefWidth="160" style="-fx-background-color: #2a9d8f; -fx-text-fill: white;" text="Dashboard" />
            <Button prefWidth="160" style="-fx-background-color: #2a9d8f; -fx-text-fill: white;" text="Medicines" />
            <Button prefWidth="160" style="-fx-background-color: #2a9d8f; -fx-text-fill: white;" text="Sales" />
            <Button prefWidth="160" style="-fx-background-color: #2a9d8f; -fx-text-fill: white;" text="Customers" />
            <Button prefWidth="160" style="-fx-background-color: #2a9d8f; -fx-text-fill: white;" text="Reports" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <AnchorPane fx:id="contentArea" style="-fx-background-color: #f4f4f4;">
            <Label layoutX="50.0" layoutY="50.0" style="-fx-font-size: 18px;" text="Welcome to the Dashboard!" />
        </AnchorPane>
    </center>

</BorderPane>
